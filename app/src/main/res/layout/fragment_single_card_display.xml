<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    tools:context=".fragments.SingleCardDisplayFragment">

    <ImageView
        android:id="@+id/mtg_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:transitionName="@string/mtg_card_scale_transition_name"
        app:layout_constraintBottom_toTopOf="@+id/draft_me_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/mtg_card_content_description"
        app:srcCompat="@drawable/nissa_temp_card" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/draft_me_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/draft_me_text"
        app:layout_constraintBottom_toTopOf="@+id/draft_me_button_go_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mtg_card" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/draft_me_button_go_back"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/draft_me_button"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/dont_draft_me_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/draft_me_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/draft_me_button"
        app:layout_constraintTop_toBottomOf="@+id/draft_me_button" />

</androidx.constraintlayout.widget.ConstraintLayout>

