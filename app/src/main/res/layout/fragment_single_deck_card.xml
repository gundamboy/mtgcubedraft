<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SingleCardDisplayFragment"
    android:layout_marginTop="?android:attr/actionBarSize">

    <ImageView
        android:id="@+id/mtg_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margins_8"
        android:layout_marginTop="@dimen/margins_8"
        android:layout_marginEnd="@dimen/margins_8"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:transitionName="@string/mtg_card_scale_transition_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nissa_temp_card" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_back_button"
        android:layout_width="@dimen/layout_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margins_8"
        android:layout_marginBottom="@dimen/margins_8"
        android:text="@string/go_back_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mtg_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>

