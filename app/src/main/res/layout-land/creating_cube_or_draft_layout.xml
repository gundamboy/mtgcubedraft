<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/building_cube_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/creating_cube_static_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="@string/creating_cube"
                            android:textSize="42sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/creating_draft_static_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="@string/creating_draft"
                            android:textSize="42sp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/percentage_built"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/cube_built_base_percent"
                            android:textSize="32sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/mtg_symbol_u"
                            app:layout_constraintStart_toEndOf="@+id/mtg_symbol_g"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/mtg_symbol_w"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/w_mana_symbol"
                            app:layout_constraintBottom_toTopOf="@+id/percentage_built"
                            app:layout_constraintEnd_toStartOf="@+id/mtg_symbol_u"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/mtg_symbol_u"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/u_mana_symbol"
                            app:layout_constraintBottom_toBottomOf="@+id/percentage_built"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/percentage_built" />

                        <ImageView
                            android:id="@+id/mtg_symbol_b"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/b_mana_symbol"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/mtg_symbol_u"
                            app:layout_constraintTop_toBottomOf="@+id/mtg_symbol_u" />

                        <ImageView
                            android:id="@+id/mtg_symbol_r"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/r_mana_symbol"
                            app:layout_constraintBottom_toBottomOf="@+id/mtg_symbol_b"
                            app:layout_constraintEnd_toStartOf="@+id/mtg_symbol_b"
                            app:layout_constraintStart_toStartOf="@+id/mtg_symbol_g"
                            app:layout_constraintTop_toTopOf="@+id/mtg_symbol_b" />

                        <ImageView
                            android:id="@+id/mtg_symbol_g"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/g_mana_symbol"
                            app:layout_constraintBottom_toBottomOf="@+id/mtg_symbol_u"
                            app:layout_constraintEnd_toStartOf="@+id/mtg_symbol_w"
                            app:layout_constraintTop_toTopOf="@+id/mtg_symbol_u" />
                </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
</LinearLayout>
