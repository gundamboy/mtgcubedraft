<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/newCubeStepOneFragment">

    <fragment
        android:id="@+id/newCubeStepOneFragment"
        android:name="com.ragingclaw.mtgcubedraftsimulator.fragments.NewCubeStepOneFragment"
        android:label="fragment_new_cube_step_one"
        tools:layout="@layout/fragment_new_cube_step_one" >
        <action
            android:id="@+id/action_newCubeStepOneFragment_to_newCubeStepTwoFragment"
            app:destination="@id/newCubeStepTwoFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_right" />
    </fragment>
    <fragment
        android:id="@+id/newCubeStepTwoFragment"
        android:name="com.ragingclaw.mtgcubedraftsimulator.fragments.NewCubeStepTwoFragment"
        android:label="fragment_new_cube_step_two"
        tools:layout="@layout/fragment_new_cube_step_two">
        <argument android:name="cubeName"
            android:defaultValue="name"/>
    </fragment>
</navigation>